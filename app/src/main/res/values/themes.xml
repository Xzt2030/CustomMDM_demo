<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="ThemeCustomMDM">
        <item name="android:buttonStyle">@style/Button3DStyle</item>
        <item name="android:textViewStyle">@style/text_style</item>
    </style>

    <style name="MyAlertDialogTheam">
        <item name="android:background">@drawable/dialog_round_layout</item>
        <item name="android:editTextStyle">@style/edit_style</item>
        <item name="android:buttonStyle">@style/Button3DStyle</item>
        <item name="android:textViewStyle">@style/text_style</item>
    </style>

    <style name="Theme.MDM_Custom" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
</resources>