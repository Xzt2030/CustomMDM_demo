<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <gradient
                android:startColor="@color/kozen_yellow"
                android:centerColor="@color/kozen_yellow1"
                android:endColor="@color/Kozen_yellow2"
